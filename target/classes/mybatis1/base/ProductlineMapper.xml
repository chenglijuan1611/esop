<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductlineMapper">

	<!--表名 -->
	<sql id="tableName">
		BASE_PRODUCTLINE
	</sql>
    <sql id="classificationtableName">
		BASE_CLASSIFICATION
	</sql>
	<sql id="usertableName">
		sys_user
	</sql>
	<sql id="lineCategorytableName">
		XT_TC_LINECATEGORY
	</sql>
	<sql id="terminaltableName">
		BASE_TERMINAL
	</sql>
	<!-- 字段 -->
	<sql id="Field">
		CODE,
		NAME,
		Liner,
		PRODUCTLINE_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CODE},
		#{NAME},
		#{Liner},
		#{PRODUCTLINE_ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
			CODE,NAME,Liner,PRODUCTLINE_ID
		) values (
			#{CODE},#{NAME},#{Liner},#{PRODUCTLINE_ID}
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		PRODUCTLINE_ID = #{PRODUCTLINE_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		CODE = #{CODE},
		NAME = #{NAME},
		Liner = #{Liner}
		where
		PRODUCTLINE_ID = #{PRODUCTLINE_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		PRODUCTLINE_ID = #{PRODUCTLINE_ID}
	</select>
	
	<!-- 通过产线编码CODE获取数据 -->
	<select id="findByCode" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="CODE!= null and CODE != ''"><!-- 关键词检索 -->
		and CODE = #{CODE}
		</if>
	</select>


	<!-- 通过生产线名称NAME获取数据 -->
	<select id="listByName" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		NAME = #{NAME}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select 
		BASE_PRODUCTLINE.CODE,
		BASE_PRODUCTLINE.NAME,
		BASE_PRODUCTLINE.BZ,
		BASE_PRODUCTLINE.PRODUCTLINE_ID,
		BASE_PRODUCTLINE.LineCategoryID,
		BASE_PRODUCTLINE.DepartmentID,
		sys_user.NAME as lineLeader,
		sys_user.USERNAME,
		BASE_PRODUCTLINE.Liner,<!-- 产线操作员唯一，用于登录 -->
		XT_TC_LINECATEGORY.LINECATEGORYNAME,
		oa_department.NAME departmentName
		from
		BASE_PRODUCTLINE left join sys_user
		on BASE_PRODUCTLINE.BZ = sys_user.USERNAME
		left join XT_TC_LINECATEGORY on BASE_PRODUCTLINE.LineCategoryID = XT_TC_LINECATEGORY.LineCategoryID
		left join oa_department on BASE_PRODUCTLINE.DepartmentID = oa_department.DEPARTMENT_ID
		where 1 = 1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
					CODE LIKE '%'+#{pd.keywords}+'%'
					or
					BASE_PRODUCTLINE.NAME LIKE '%'+#{pd.keywords}+'%'
					or
					BASE_PRODUCTLINE.BZ LIKE '%'+#{pd.keywords}+'%'
				<!--	根据需求自己加检索条件
					字段1 LIKE '%'+ #{pd.keywords}+'%'
					 or 
					字段2 LIKE '%'+ #{pd.keywords}+'%' 
				-->
				)
		</if>
		order by BASE_PRODUCTLINE.CODE asc
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select * 
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="DepartmentID != null and DepartmentID != ''">
			and DepartmentID=#{DepartmentID}
		</if>
		order by CODE
	</select>
	
	<!-- 列表(全部) -->
	<select id="selectAll" parameterType="pd" resultType="pd">
		select * 
		from 
		<include refid="tableName"></include>
		where
		PRODUCTLINE_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</select>


	<select id="listAllExcel" parameterType="pd" resultType="pd">
		select
		a.CODE,
		a.NAME,
		a.BZ,
		a.PRODUCTLINE_ID,
		b.NAME as lineleader,
		b.USERNAME
		
		from
		<include refid="tableName"></include>
		a,sys_user  b
		where a.BZ=b.USERNAME
		<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			and
			(
			a.CODE LIKE '%'+ #{keywords}+'%'
			or
			a.NAME LIKE '%'+ #{keywords}+'%'
			or
			a.BZ LIKE '%'+ #{keywords}+'%'
			or
			b.USERNAME LIKE '%'+ #{keywords}+'%'
            or
			b.NAME LIKE '%'+ #{keywords}+'%'
			)
		</if>

	</select>
	
	
	<!-- findRelationOfTerminal -->
	<select id="findRelationOfTerminal" parameterType="pd" resultType="pd">
		select 
		a.CODE
		from 
		<include refid="tableName"></include>
		a,
		<include refid="terminaltableName"></include>
		b
		where a.PRODUCTLINE_ID = #{PRODUCTLINE_ID} and a.CODE = b.DEPLOY_LINE
	</select>
	
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		PRODUCTLINE_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!-- rhz -->
</mapper>