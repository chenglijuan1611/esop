<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ClassificationMapper">

	<!--表名 -->
	<sql id="tableName">
		BASE_CLASSIFICATION
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		CLASSIFICATION_CODE,
		CLASSIFICATION_NAME,
		CLASSIFICATION_RESERVE,
		CLASSIFICATION_ID
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{CLASSIFICATION_CODE},
		#{CLASSIFICATION_NAME},
		#{CLASSIFICATION_RESERVE},
		#{CLASSIFICATION_ID}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		CLASSIFICATION_ID = #{CLASSIFICATION_ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		CLASSIFICATION_CODE = #{CLASSIFICATION_CODE},
		CLASSIFICATION_NAME = #{CLASSIFICATION_NAME},
		CLASSIFICATION_RESERVE = #{CLASSIFICATION_RESERVE},
		CLASSIFICATION_ID = CLASSIFICATION_ID
		where
		CLASSIFICATION_ID = #{CLASSIFICATION_ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		CLASSIFICATION_ID = #{CLASSIFICATION_ID}
	</select>



	<!-- 通过CLASSIFICATION_CODE获取数据 -->
	<select id="findByCode" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		CLASSIFICATION_CODE = #{CLASSIFICATION_CODE}
	</select>
	
	
	
	<!-- 通过CLASSIFICATION_CODE获取数据 -->
	<select id="findByName" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		CLASSIFICATION_NAME = #{CLASSIFICATION_NAME}
	</select>


	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 字段1 LIKE '%'+ #{pd.keywords}+'%' or 字段2 LIKE '%'+ #{pd.keywords}+'%' -->
			CLASSIFICATION_CODE LIKE '%'+ #{pd.keywords}+'%'
			or
			CLASSIFICATION_NAME LIKE '%'+ #{pd.keywords}+'%'
			)
		</if>
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
	</select>
	
	
	<select id="listAllExcel" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			and
			(
			CLASSIFICATION_NAME LIKE '%'+ #{keywords}+'%'
			or
			CLASSIFICATION_CODE LIKE '%'+ #{keywords}+'%'
			)
		</if>
	</select>
	
	

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		CLASSIFICATION_ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!-- rhz -->
</mapper>